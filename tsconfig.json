{
  "compilerOptions": {
    "target": "ES6",                
    "module": "CommonJS",           
    "strict": true,                 
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",             
    "rootDir": "./src",             
    "resolveJsonModule": true,      
    "noImplicitAny": false,         
    "typeRoots": ["./node_modules/@types"],  
    "moduleResolution": "node",     
    "baseUrl": ".",                 
    "paths": {
      "@/*": ["src/*"]              
    }
  },
  "include": ["src"],              
  "exclude": ["node_modules", "dist"]
}
